# Dockerfile for dockcross + uv
FROM arm64v8/debian:bookworm

# Install dependencies and uv
RUN apt-get update && apt-get install -y curl git python3-dev python3-numpy python3-opencv build-essential pkg-config \
  && curl -LsSf https://astral.sh/uv/install.sh | sh
RUN mv $HOME/.local/bin/uv* /usr/local/bin
COPY build.sh /usr/bin
# Optionally set a default working directory
WORKDIR /work
